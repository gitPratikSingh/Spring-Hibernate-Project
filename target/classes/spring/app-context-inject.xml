<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>Injection</description>

	<context:component-scan base-package="product.stage.pratik.inject" />
	
	<bean id="injection" class="product.stage.pratik.inject.InjectionSimple">
		<property name="name"><value>Pratik Singh</value></property>
		<property name="value" value="24" />
    </bean>
    
</beans>
